    section {
        padding-block: 2rem;
    }
    .dark-mode {
        color: var(--color-text-primary);
        background-color: var(--color-background);
    }
    .container {
        width: 450px;
        padding: 1rem;
        border-radius: 1rem;
    }

    .flex {
        margin-block: 2rem;
        display: flex;
        gap: 1rem;
    }

    .surface {
        display: grid;
        place-items: center;
        text-align: center;
        height: 150px;
