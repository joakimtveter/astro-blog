---
import Layout from '../layouts/Layout.astro';
import Card from "../components/Card.astro";

const projects = [
    {
        title: 'Holidaze - Project Exam 2',
        description: 'It is an AirBnB clone, using React, Material UI, and Redux. My submission for the final exam at Noroff',
        type: 'school',
        src: 'https://pe2.tveter.dev/screenshot.png',
        github: 'https://github.com/joakimtveter/noroff-project-exam-2',
        href: 'https://pe2.tveter.dev'
    },
	{
        title: 'MyShop - JavaScript Frameworks CA',
        description: 'A ecommerce site using React and CSS modules. My submission for the JavaScript Frameworks Course Assignment at Noroff.',
        type: 'school',
        src: 'https://jsf.tveter.dev/screenshot.png',
        github: 'https://github.com/joakimtveter/noroff-js-framework',
        href: 'https://jsf.tveter.dev'
    },
	{
        title: 'The Auction House - Semester Project 2',
        description: 'An auction website created using HTML, SCSS, Vite and Javascript. My submission for the Semester Project 2 at Noroff',
        type: 'school',
        src: 'https://sp2.tveter.dev/screenshot.png',
        github: 'https://github.com/joakimtveter/noroff-semester-project-2',
        href: 'https://sp2.tveter.dev'
    }
]
