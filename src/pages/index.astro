---
import Layout from '../layouts/Layout.astro';
import Card from "../components/Card.astro";
import TechnologyListItem from "../components/TechnologyListItem.astro";
import calculateAge from "../utils/calculateAge";

const age = calculateAge('1986/06/11')

const projects = [
{
    title: 'Holidaze - Prosjekt Eksamen 2',
    description: 'Avsluttende oppgave på Noroff. Det er en AirBnB klone, laget med React, Material UI, Redux, og RTK-Query.',
    type: 'school',
    src: 'https://pe2.tveter.dev/screenshot.png',
    github: 'https://github.com/joakimtveter/noroff-project-exam-2',
    href: 'https://pe2.tveter.dev'
    },
{
    title: 'MyShop - JavaScript Rammeverk',
    description: 'En nettbutikk laget med React and CSS-moduler. Dette var min innlevering i faget JavaScript Rammeverk ved Noroff.',
    type: 'school',
    src: 'https://jsf.tveter.dev/screenshot.png',
    github: 'https://github.com/joakimtveter/noroff-js-framework',
    href: 'https://jsf.tveter.dev'
    },
{
    title: 'The Auction House - Semester Prosjekt 2',
    description: 'En auksjonsnettside laget med HTML, SCSS, Vite, og JavaScript. Dette var min innlevering ved slutten av første semester på andre året ved Noroff',
    type: 'school',
    src: 'https://sp2.tveter.dev/screenshot.png',
    github: 'https://github.com/joakimtveter/noroff-semester-project-2',
    href: 'https://sp2.tveter.dev'
    }
]
---

