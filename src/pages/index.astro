<style>
	.socials {
		display: flex;
		gap: 1rem;
	}
	.brand-link {
		height: 40px;
		width: 45px;
		transition: ease-in-out 0.5s;
	}

	.brand-link:hover svg {
		rotate: 15deg;
		transition: ease-in-out 0.2s;
	}
	
	.brand-link svg {
		height: auto;
		width: 100%;
		fill: currentColor;
	}
	.profile-image {
		width: 100%;
		border-radius: 50%;
		margin-block-end: 1rem;
	}

	.about {
		margin-block: 4rem;
		padding: 4rem 2rem;
		border-radius: 1.5rem;
	}

	.name {
		margin-block: 0;
		font-size: var(--fs-7);
		line-height: 1.1;
	}

    .job-title {
        font-size: var(--fs-2);
		text-transform: uppercase;
		font-weight: 300;
		margin-block: 0;
    }

	.intro {
		font-size: var(--fs-2);
		margin-block: 2rem;
	}

    .project-grid {
		padding: 0;
        display: grid;
        grid-template-columns: repeat(3, minmax(0, 1fr));
		gap: 1.5rem;
    }

	@media (width < 700px) {
		.profile-image {
			margin-top: -200px;
		}

		.about {
			margin-block-start: 10rem;
			text-align: center;
			margin-inline: 1rem;
		}
		.project-grid {
			grid-template-columns: 1fr;
		}
	}
	@media (width > 700px) {
		.about {
			gap: 3rem;
			display: grid;
			grid-template-columns: 1fr 2fr;
			place-items: center;
		}
	}

	@media (700px < width < 900px) {
		.project-grid {
			grid-template-columns: repeat(2, minmax(0, 1fr));
		}
		.about{
			gap: 3rem;
			display: grid;
			grid-template-columns: repeat(2, 1fr);
			place-items: center;
		}
	}

</style>
